<xsd:schema version="1.0"
           xmlns="default"
           xmlns:d="default"
           targetNamespace="default"
           xmlns:xsd="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">

   <xsd:element name="page" type="validPage"/>

   <xsd:complexType name="validPage">
      <xsd:sequence>
         <xsd:element name="seo" type="seo"/>
         <xsd:element name="head" type="anyElement"/>
         <xsd:element name="body" type="anyContent"/>
      </xsd:sequence>
      <xsd:attribute name="stylesheet" type="noFragmentOrTrailingSlashRelativeURI"/>
   </xsd:complexType>

   <xsd:complexType name="seo">
      <xsd:sequence>
         <xsd:element name="title" type="xsd:string"/>
         <xsd:element name="description" type="xsd:string" minOccurs="0" maxOccurs="1"/>
         <xsd:element name="keywords" type="xsd:string" minOccurs="0" maxOccurs="1"/>
         <xsd:element name="rewrites" type="seoRewrites" minOccurs="0" maxOccurs="1"/>
      </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name="seoRewrites">
      <xsd:choice>
         <xsd:sequence>
            <xsd:element
               name="url"
               type="URIWithFragment"
               minOccurs="1"
               maxOccurs="unbounded"/>
         </xsd:sequence>
         <xsd:sequence>
            <xsd:element
               name="default"
               type="URIWithFragment"
               minOccurs="1"
               maxOccurs="1"/>
            <xsd:element
               name="url"
               type="URIWithFragment"
               minOccurs="0"
               maxOccurs="unbounded"/>
         </xsd:sequence>
      </xsd:choice>
   </xsd:complexType>

   <xsd:simpleType name="URIWithFragment">
      <xsd:restriction base="xsd:string">
         <xsd:pattern value="/?[^/\r\n#]+((/[^/\r\n#]+)*)?/?(#[^\r\n]+)?"/>
      </xsd:restriction>
   </xsd:simpleType>

   <xsd:simpleType name="noFragmentOrTrailingSlashRelativeURI">
      <xsd:restriction base="xsd:string">
         <xsd:pattern value="[^/\r\n#]+((/[^/\r\n#]+)*)?"/>
      </xsd:restriction>
   </xsd:simpleType>

   <xsd:complexType name="anyContent" mixed="true">
      <xsd:sequence>
         <xsd:any maxOccurs="unbounded" minOccurs="0" processContents="skip"/>
      </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name="anyElement">
      <xsd:sequence>
         <xsd:any maxOccurs="unbounded" minOccurs="0" processContents="skip"/>
      </xsd:sequence>
   </xsd:complexType>
</xsd:schema>